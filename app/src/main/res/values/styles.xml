<resources>

    <!--    白天主题-->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="main_bg_1">#ffffff</item>
        <item name="main_bg_2">#DCDCDC</item>
        <item name="main_bg_3">#CACACA</item>

        <item name="text_color_1">#333333</item>
        <item name="text_color_2">#666666</item>
        <item name="text_color_3">#999999</item>

        <item name="ripple_gray">#D1D1D1</item>

        <item name="bnv_bg">#bfbfbf</item>
        <item name="bnv_select_bg">#333333</item>

        <item name="division_line">#EDEDED</item>
        <item name="back">@mipmap/back_black</item>


    </style>
    <!--    夜晚主题-->
    <style name="AppTheme_Night" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="main_bg_1">#424242</item>
        <item name="main_bg_2">#706F6F</item>
        <item name="main_bg_3">#939393</item>

        <item name="text_color_1">#ffffff</item>
        <item name="text_color_2">#DADADA</item>
        <item name="text_color_3">#999999</item>

        <item name="ripple_gray">#808080</item>

        <item name="bnv_bg">#939393</item>
        <item name="bnv_select_bg">#F1F0F0</item>

        <item name="division_line">#555555</item>

        <item name="back">@mipmap/back_white</item>

    </style>

    <style name="text_1">
        <item name="android:textColor">?attr/text_color_1</item>
        <item name="android:textSize">@dimen/text_1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text_2">
        <item name="android:textColor">?attr/text_color_2</item>
        <item name="android:textSize">@dimen/text_2</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text_3">
        <item name="android:textColor">?attr/text_color_3</item>
        <item name="android:textSize">@dimen/text_3</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text_title">
        <item name="android:textColor">?attr/text_color_1</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Dialog.FullScreen" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>
